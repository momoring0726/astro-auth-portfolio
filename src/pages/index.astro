---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home Page">
  <main class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="p-10 text-center bg-white rounded-lg shadow-xl">
      <h1 class="text-3xl font-bold text-gray-900">
        Welcome to Your Auth Portfolio Project
      </h1>
      <p class="mt-2 text-gray-600">
        This is the homepage. You can navigate to the login or register pages.
      </p>

      <div class="flex justify-center mt-8 space-x-4">
        <a
          href="/login"
          class="px-5 py-2 font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Log In
        </a>
        <a
          href="/register"
          class="px-5 py-2 font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300"
        >
          Register
        </a>
      </div>

      <div class="mt-6">
        <a href="/dashboard" class="text-sm text-indigo-600 hover:underline">
          Go to Dashboard &rarr;
        </a>
      </div>
    </div>
  </main>
</Layout>
